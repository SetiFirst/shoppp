<Window x:Class="shoppp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:shoppp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel>
            <StackPanel>
                <DataGrid x:Name="shop" AutoGenerateColumns="False" ItemsSource="{Binding ProductCollection}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Title" Width="100" Binding="{Binding Title}" />
                        <DataGridTextColumn Header="Description" Width="100" Binding="{Binding Description}" />
                        <DataGridTextColumn Header="Category" Width="100" Binding="{Binding Category}" />
                        <DataGridTextColumn Header="Price" Width="100" Binding="{Binding Price}" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>

            <StackPanel VerticalAlignment="Center">
                <TextBox x:Name="searchTextBox" Width="300" Margin="10"/>
                <Button x:Name="searchButton" Width="300" Click="searchButton_Click"  RenderTransformOrigin="0.537,1.049" Content="Найти!"/>
            </StackPanel>
        </WrapPanel>
    </Grid>
</Window>
